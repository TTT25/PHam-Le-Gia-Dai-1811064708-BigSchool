@model IEnumerable<PHam_Le_Gia_Dai___1811064708___lab5.Models.Course>

@{
    ViewBag.Title = "LectureIamGoing";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>LectureIamGoing</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="row">
    <ul class="course">
        @foreach (var course in Model)
        {
            <li>
                <div class="date">
                    <div class="month">
                        @course.DateTime.ToString("MM")
                    </div>

                    <div class="day">
                        @course.DateTime.ToString("dd")
                    </div>
                </div>

                <div class="details">

                    <span class="lecture">@course.ApplicationUser.Name</span>
                    <br/>
                    <span class="category">@course.Category.Name</span>
                </div>
            </li>
        }
    </ul>
</div>